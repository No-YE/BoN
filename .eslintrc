{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
      "airbnb-typescript",
      "plugin:@typescript-eslint/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "project": "./tsconfig.json",
        "tsconfigRootDir": "./"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "settings": {
      "import/resolver": {
        "node": {
         "extensions": [".js", ".jsx", ".ts", ".tsx"]
        },
        "typescript": {}
      }
    },
    "rules": {
      "max-len": ["error", { "code": 120 }]
    }
}
