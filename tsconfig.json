{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "jsx": "preserve",
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "./src/type",
      "./node_modules/@types"
    ],
    "paths": {
      "~/*": ["./*"],
      "@lib/*": [
        "./infrastructure/lib/*"
      ]
    },
  },
  "exclude": [
    "test",
    "dist",
    "ecosystem.config.js"
  ]
}