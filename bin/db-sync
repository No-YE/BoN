#!/usr/bin/env node
const { fold } = require('fp-ts/lib/Either');
const makeSequelize = require('../dist/database/db');

(async () => {
  try {
    await fold(
      (error) => {
        throw error;
      },
      async (sequelize) => {
        await sequelize.sync();
      },
    )(await makeSequelize.default()());
    
    console.log('success');
    process.exit(0);
  } catch (error) {
    console.log(error);
    process.exit(1);
  }
})();